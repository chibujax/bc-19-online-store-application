<!DOCTYPE html>
<html>
  <head>
    <title><%=title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
      function hideURLbar(){ window.scrollTo(0,1); } 
    </script>
    <link href="/stylesheets/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="/stylesheets/style.css" rel='stylesheet' type='text/css' />
    <script src="/javascripts/jquery-1.11.1.min.js"></script>  
    <script type="text/javascript" src="/javascripts/move-top.js"></script>
    <script type="text/javascript" src="/javascripts/easing.js"></script>
    <script type="text/javascript">
     function handlePro(selectObject) {         
        var value = selectObject.value;
        if(value === ' '){
          alert('Please select store');
          return false;
        }
        window.location.href = "stores/" + value;  
     }
    </script> 
    <!-- start-smoth-scrolling -->
    <link href="/stylesheets/font-awesome.css" rel="stylesheet"> 
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Noto+Sans:400,700' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <a href="#"><img src="images/download.png" class="img-head" alt=""></a>
    <div class="header">
      <div class="container">			
        <div class="logo">
          <h1 ><a href="/"><b>T<br>H<br>E</b>Jax Mall<span>The Best Online Mall</span></a></h1>
        </div>
        <div class="head-t">
          <ul class="card">
          <% if(isUser) { %> 
            <li><a href='<%=storeurl %>' ><i class="fa fa-file-text-o" aria-hidden="true"></i>My Store</a></li>
            <li><a href="/signout" ><i class="fa fa-file-text-o" aria-hidden="true"></i>Sign out</a></li>
          <% } else { %>
            <li><a href="/signin" ><i class="fa fa-user" aria-hidden="true"></i>signin</a></li>
            <li><a href="/signup" ><i class="fa fa-arrow-right" aria-hidden="true"></i>Signup</a></li>
          <% } %>	
          </ul>	
        </div>			
        <div class="header-ri">
          <ul class="social-top">
            <li><a href="#" >Welcome <%=owner %></a></li>
          </ul>	
        </div>
        <div class="nav-top">
          <div class="collapse navbar-collapse" id="bs-megadropdown-tabs"> 
          <% if(message !== undefined) { %> 
            <div class='<%= mtype %>'>
              <a href="#" class="close" data-dismiss="alert">&times;</a>
                <%= message %>
            </div> 
          <% } %>  
          </div>			
        </div>			
      </div>	
	  </div>		
    <!--Below header-->
    <div data-vide-bg="video/video">
      <div class="container">
        <img src="images/stores.jpg" alt="">	
      </div>
    </div>
	<!--content-->
	<div class="content-top ">
		<div class="container ">
			<div class="spec ">
				<h3>Special Stores</h3>
				<div class="ser-t">
					<b></b>
					<span><i></i></span>
					<b class="line"></b>
				</div>
			</div>
				<div class="tab-head ">
					<nav class="nav-sidebar">
						<ul class="nav tabs ">
						  <li class="active"><a href="#" >Select a store below to view Products</a><% 
              if (Object.keys(mstores) < 1){
              %> 
              : No store Found. Try again later
              <%} else { %>
              <select onchange="handlePro(this);">
              <option value =' '>Select store</option> 
              <%
               for (var pros in mstores){
              %>
              <option value ='<%= pros%>'>
              <%=mstores[pros] %>
              </option>
              <%
              }
              %>
              </select>
               <% } %>
              </li>
						</ul>
					</nav>		
		</div>
		</div>
		</div>

	<!--content-->

<!--footer-->
<div class="footer">
	<div class="container">
		<div class="clearfix"></div>
			<div class="footer-bottom">
				<h2 ><a href="/"><b>T<br>H<br>E</b>Jax Mall<span>The Best Online Mall</span></a></h2>
				<p class="fo-para">Jax Mall is just that special place, one stop shop, powered by BFA</p>
			</div>
		<div class="copy-right">
			<p> &copy; 2017. BFA | Design by  Chibu Jax</p>
		</div>
	</div>
</div>
<!-- //footer-->


<!-- for bootstrap working -->
		<script src="/javascripts/bootstrap.js"></script>
<!-- //for bootstrap working -->
  
 
</body>
</html>